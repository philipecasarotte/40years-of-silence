<h1>Reorder</h1>

<ul id="order">
	<% @items.each do |photo| %>
	<li id="item_<%=photo.id%>"><%= image_tag(photo.image.url(:thumb)) %></li>
	<% end %>
</ul>

<%= sortable_element 'order', 
      :complete => visual_effect(:highlight, 'order'), 
      :url => { :action => "order" } %>

<p><%= link_to "Back", admin_album_photos_path(parent_object) %></p>