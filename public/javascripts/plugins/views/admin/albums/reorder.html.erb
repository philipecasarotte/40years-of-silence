<h1>Reorder</h1>

<ul id="order">
	<% @items.each do |album| %>
	<li id="item_<%=album.id%>"><%= album.title %></li>
	<% end %>
</ul>

<%= sortable_element 'order', 
      :complete => visual_effect(:highlight, 'order'), 
      :url => { :action => "order" } %>

<p><%= link_to "Back", admin_albums_path %></p>