<h1>Listing Downloads</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Pdf file name</th>
    <th>Pdf content type</th>
    <th>Pdf file size</th>
    <th>Pdf updated at</th>
  </tr>
  <%- @downloads.each do |download|%>
    <tr>
      <td><%=h download.title %></td>
      <td><%=h download.body %></td>
      <td><%=h download.pdf_file_name %></td>
      <td><%=h download.pdf_content_type %></td>
      <td><%=h download.pdf_file_size %></td>
      <td><%=h download.pdf_updated_at %></td>
    
      <td><%=link_to 'Show', object_url(download) %></td>
      <td><%=link_to 'Edit', edit_object_url(download) %></td>
      <td><%=link_to 'Destroy', object_url(download), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
<br/>

<%= link_to 'New Download', new_object_url %>