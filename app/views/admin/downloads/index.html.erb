<h1>Listing Downloads</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>
  <%- @downloads.each do |download|%>
    <tr>
      <td><%=h download.title %></td>
      <td><%=h download.body %></td>
      <td><%=link_to 'Edit', edit_object_url(download) %></td>
      <td><%=link_to 'Destroy', object_url(download), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
<br/>

<%= link_to 'New Download', new_object_url %> | <%= link_to "Reorder", reorder_admin_downloads_path %>