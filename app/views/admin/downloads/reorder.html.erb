<h1>Reorder</h1>

<ul id="order">
	<% @items.each do |download| %>
	<li id="item_<%=download.id%>"><%= download.title %></li>
	<% end %>
</ul>

<%= sortable_element 'order', 
      :complete => visual_effect(:highlight, 'order'), 
      :url => { :action => "order" } %>

<p><%= link_to "Back", admin_downloads_path %></p>