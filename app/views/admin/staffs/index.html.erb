<h1>Listing Staffs</h1>

<table>
  <tr>
    <th>&nbsp;</th>
    <th>Name</th>
    <th>Title</th>
  </tr>
  <%- @staffs.each do |staff|%>
    <tr>
			<td class="align"><%= image_tag staff.image.url(:thumb) %></td>
      <td><%=h staff.name %></td>
      <td><%=h staff.title %></td>
    
      <td><%=link_to 'Edit', edit_object_url(staff) %></td>
      <td><%=link_to 'Destroy', object_url(staff), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
<br/>

<%= link_to 'New Staff', new_object_url %> | <%= link_to "Reorder", reorder_admin_staffs_path %>