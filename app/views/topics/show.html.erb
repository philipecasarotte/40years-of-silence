<div id="sub_nav">
	<%= render :partial => 'messages' %>
</div>
<div id="content">
	<h1>Forum</h1>
	<div class="content_cms">
			<% @topic.messages.children_of(nil).by_recency.each_with_index do |message, i| %>
				<h2 class="titleReply"><%= link_to h(message.title), topic_message_path(@topic, message) %></h2>
				<blockquote><%= simple_format(message.content) %></blockquote>
				<% unless message.parent %>
					<p>Posted by <%= h(message.user.login) %> on <%= message.created_at.time.to_formatted_s(:short) %></p>
					<%  if logged_in? && current_user %>
						<p>
							<%= link_to('Add a reply', new_reply_path(@topic, message)) %>
							<%= link_to "Delete", topic_message_path(@topic, message), :method=>:delete, :confirm=>"Are you sure?" if logged_in? and current_user.administrator? %>
						</p>
					<% end %>
				<% end %>
			<% end %>
	</div>
</div>
<% content_for :head do -%>
	<%= javascript_include_tag 'plugins/flashembed.min', 'page/directors_statements' %>
	<%= javascript_tag "$(function(){set_menu('forum');});" %>
<% end -%>