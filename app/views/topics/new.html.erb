<%= render(:partial => 'layouts/meta_data', :locals => {:obj => @page}) if @page %>
<div id="doubleBox">
	<%= render :partial => 'new' %>

	<%= image_tag 'content/top_rouded_double.png', :size => '639x15' %>
	<div>
		<h1>New Topic</h1>
		<p><%= link_to 'Back to Topics', topics_path %></p>
		<% form_for @topic do |f| %>
		<div class="alt" style="width:400px;">
			<%= f.label :title %>
			<%= f.text_field :title %>
		</div>
		<div class="alt"  style="width:400px;">
			<%= f.label :description %>
			<%= f.text_area :description %>
		</div>
		<div class="alt" style="width:400px;margin-top:20px;">
			<%= content_tag :button, 'Create', :type => 'submit' %>
		</div>
		<% end %>
	</div>
	<%= image_tag 'content/bottom_rouded_double.png', :size => '639x15' %>
</div>
<%= javascript_include_tag 'plugins/flashembed.min', 'page/directors_statements' %>
