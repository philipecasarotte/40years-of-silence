<%= render(:partial => 'layouts/meta_data', :locals => {:obj => @page}) if @page %>
<% @title = @page.title %>

<div id="sub_nav">
	<% img = @page.body.match(/(<p><img .* \/><\/p>)/) %>
	<%= img[0] unless img.blank? %>
</div>

<div id="content" class="directors_statements">
	<h1><%= @page.title %></h1>
	<div class="content_cms"><%= @page.body.sub(/(<p><img .* \/><\/p>)/, "") %></div>
</div>
<% content_for :head do -%>
	<%= javascript_tag "$(function(){set_menu('crew');});" %>
<% end -%>