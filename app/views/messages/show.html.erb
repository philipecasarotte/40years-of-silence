
<%= render(:partial => 'layouts/meta_data', :locals => {:obj => @page}) if @page %>
<div id="doubleBox">
	<%= render :partial => 'message' %>
	<%= image_tag 'content/top_rouded_double.png', :size => '639x15' %>
	<div>
		  <span>
			<h1 class="message_h1"><%= link_to h(@topic.title), @topic %></h1>
			<% if @message.parent %>
			  <%= link_to h(@message.parent.title), topic_message_path(@topic, @message.parent) %> &gt;
			<% end %>
		  </span>
		  <%= h(@message.title) %>
		<%= simple_format(h(@message.content)) %>
		<% unless @message.parent %>
		  <table id="replies" cellspacing="0" class="topics_table" width="100%">
			<tr>
			  <th class="left_text">Replies</th>
			  <th class="right_text">By</th>
			  <th class="right_text">Created</th>
			</tr>
			<% @message.children.by_recency.each_with_index do |message, i| %>
			  <tr class="<%= i%2 == 1 ? 'even' : 'odd' %>">
				<td class="left_text">
				  <%= simple_format(h(message.content)) %>
				</td>
				<td class="right_text">
				  <%= h(message.user.login) %>
				</td>
				<td class="date-col right_text" width="80px">
				  <span title="<%= message.created_at.strftime('%d %b %Y %H:%M %p %Z')%>">
				    <%= time_ago_in_words(message.created_at) %> ago
				  </span>
				</td>
			  </tr>
			<% end %>
		  </table>
		<% end %>
	</div>
	<%= image_tag 'content/bottom_rouded_double.png', :size => '639x15' %>
</div>
<%= javascript_include_tag 'plugins/flashembed.min', 'page/directors_statements' %>
